{
  "compilerOptions": {
    "lib": ["es5", "es6", "es7"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@modules/*": ["src/modules/*"]
    }
  }
}
