{
  "compilerOptions": {
    "lib": ["es5", "es6", "es7"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@dto/*": ["src/dto/*"],
      "@configs/*": ["src/configs/*"],
      "@decorators/*": ["src/decorators/*"],
      "@enums/*": ["src/enums/*"],
      "@filters/*": ["src/filters/*"],
      "@guards/*": ["src/guards/*"],
      "@interceptors/*": ["src/interceptors/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@modules/*": ["src/modules/*"],
      "@type/*": ["src/type/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
